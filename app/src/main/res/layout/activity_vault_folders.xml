<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0c0c0c"
    android:padding="16dp">

    <!-- Folder Section -->
    <LinearLayout
        android:id="@+id/photosAndVideosFolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Photos and Videos"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/audioFolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/photosAndVideosFolder"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Audio"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/documentsFolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/audioFolder"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Documents"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </LinearLayout>

    <!-- Icon Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/rounded_background_add_content"
        android:gravity="start"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Add Icons (with consistent spacing between them) -->
        <ImageView
            android:id="@+id/addPhotos"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="Add Photos"
            android:src="@drawable/add_image_ic" />

        <ImageView
            android:id="@+id/addVideos"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="Add Videos"
            android:src="@drawable/add_video_ic" />

        <ImageView
            android:id="@+id/addAudio"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="Add Audio Icon"
            android:src="@drawable/audio_icon" />

        <ImageView
            android:id="@+id/addDocument"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="10dp"
            android:contentDescription="Add Document Icon"
            android:src="@drawable/document_icon" />

        <ImageView
            android:id="@+id/gearIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="Settings Icon"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="0dp"
            android:src="@drawable/baseline_settings_24" />
    </LinearLayout>

</RelativeLayout>
